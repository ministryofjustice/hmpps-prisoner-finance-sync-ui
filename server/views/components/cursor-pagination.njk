{% macro cursorPagination(pagination) %}
  {% if pagination.results.count > 0 %}
    <nav class="cursor-navigation" aria-label="Pagination">
      <div class="cursor-navigation__links">
        {% if pagination.previous %}
          <a class="govuk-link govuk-link--no-visited-state" href="{{ pagination.previous.href }}" rel="prev">
            <svg class="govuk-pagination__icon govuk-pagination__icon--prev" xmlns="http://www.w3.org/2000/svg" height="13" width="15" aria-hidden="true" focusable="false" viewBox="0 0 15 13">
              <path d="m6.5 0-6.5 6.5 6.5 6.5 1.4-1.4-4-4h11.1v-2.2h-11.1l4-4-1.4-1.4z"></path>
            </svg>
            <span>Previous</span>
          </a>
        {% endif %}

        {% if pagination.next %}
          <a class="govuk-link govuk-link--no-visited-state" href="{{ pagination.next.href }}" rel="next">
            <span>Next</span>
            <svg class="govuk-pagination__icon govuk-pagination__icon--next" xmlns="http://www.w3.org/2000/svg" height="13" width="15" aria-hidden="true" focusable="false" viewBox="0 0 15 13">
              <path d="m7 0-1.4 1.4 4 4h-11.1v2.2h11.1l-4 4 1.4 1.4 6.5-6.5-6.5-6.5z"></path>
            </svg>
          </a>
        {% endif %}
      </div>

      <div class="cursor-navigation__summary">
        <p class="govuk-body">
          Showing <b>{{ pagination.results.from }}</b> to <b>{{ pagination.results.to }}</b> of <b>{{ pagination.results.count }}</b> results
        </p>
      </div>
    </nav>
  {% endif %}
{% endmacro %}
